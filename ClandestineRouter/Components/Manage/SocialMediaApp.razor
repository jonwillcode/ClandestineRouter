@page "/clandestine/social-media"
@using System.ComponentModel.DataAnnotations
<PageTitle>Manage social media apps</PageTitle>

<h1>Manage social media apps</h1>

<div class="row">
    <div class="col-lg-6">
        <EditForm Model="Input" method="post" OnValidSubmit="OnValidSubmitAsync" FormName="socialMediaApp">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />
            <div class="form-floating mb-3">
                <input type="text" value="@name" id="Input.Name" class="form-control" placeholder="Enter a social media app name" aria-required="true" autocomplete="off" />
                <label for="Input.Name" class="form-label">Username</label>
                <ValidationMessage For="() => Input.Name" class="text-danger" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private string? name; 
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromQuery]
    private string? Id { get; set; }

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Id))
        {
            //TODO get the social media account to edit if there is one
            await Task.Delay(1000);
        }
    }

    private void OnValidSubmitAsync(EditContext args)
    {
        throw new NotImplementedException();
    }

    private sealed class InputModel
    {
        [Required]
        public string Name { get; set; } = string.Empty;
    }

}
